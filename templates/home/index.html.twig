{% extends 'base.html.twig' %}

 {% block title %} {% endblock %} 
    {% block content %}
    <br/>
    <br/>
     <h2>Bienvenue sur le site de notre agence</h2>
     <br/>
     <h3>Retrouvez tous les biens près de chez vous au meilleur prix</h3>
<br/>
     <br/>
          <div class="row row-cols-1 row-cols-md-3">
          {% for items in products %}
          {% if loop.index <4 %}
            <div class="col">
            <div class="card mb-3">
            <img src="{{asset('uploads/'~ items.image)}}"/>
            <div class="bg-light">
            </div>
            <div class="card-body">
            <h5 class="card-title">{{items.name}}</h5>
              <p><small>Surface {{items.surface}}</small></p>
              <p><small>Prix {{items.price}}</small></p>
              <p><small>{{items.typebien}} à la {{items.typetransaction}}</small></p>
              <hr/>
              <input type="submit" class="btn btn-primary btn-sm" value="Voir le bien"/>
            </div>
          </div>
        </div>
        {% endif %}
      {% endfor %}
 {% endblock %}