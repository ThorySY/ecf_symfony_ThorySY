{% extends 'base.html.twig' %}

{% block title %}Nos biens - Agency{% endblock %}

{% block content %}
<br/>
 <div class="row">
 <div class="col-md-3">
 <h6>Votre recherche</h6>
 {{form(form)}}
 </div>

 <div class="col-md-9">
 <h5>Nos biens</h5>

<div class="row product-container">
    {% for product in products %}
         <div class="col-md-4">
            <div class="products-item text-center">
            <a href="{{ path('product', { 'slug' : product.slug }) }}"><img src="/uploads/{{ product.image }}" class="img-fluid"><br/></a>
              <h7>{{ product.name }}</h7><br/>
              <span class="product-substitle">{{product.substitle}}</span><br/>
              <span class="product-price">{{(product.price/ 100)|number_format(2,',','.') }}â‚¬</span><br/>
         </div>
    </div>
 {% endfor %}
 </div>
{% endblock %}
